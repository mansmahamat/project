{
  "expo": {
    "name": "VibeBoxing",
    "slug": "vibeboxing",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/vibeboxing.png",
    "scheme": "vibeboxing",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "VibeBoxing is a boxing training app with gamification, progress tracking, and professional workouts",
    "keywords": ["boxing", "fitness", "workout", "training", "martial arts", "vibe", "vibeboxing"],
    "ios": {  
      "supportsTablet": true,
      "bundleIdentifier": "com.vibeboxing.vibeboxing"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#FF6B35"
      },
        "package": "com.vibeboxing.vibeboxing"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {
            "newArchEnabled": true
          },
          "ios": {
            "newArchEnabled": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
